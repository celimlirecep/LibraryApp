@model LoginModel
<h6 class="display-4">Login</h6>
<hr />
<form asp-controller="Account" asp-action="Login" method="post">
    <div class="row">
       
        <div class="col-md-6">
            <div asp-validation-summary="All" class="text-danger">
                <div class="form-group row mb-2">
                    <div class="col-sm-3">
                        <label asp-for="Username" class="col-form-label"></label>
                    </div>
                    <div class="col-sm-9">
                        <input asp-for="Username" type="text" class="form-control" />
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <div class="col-sm-3">
                        <label asp-for="Password" type="text" class="col-form-label"></label>
                    </div>
                    <div class="col-sm-9">
                        <input asp-for="Password" type="text" class="form-control" />
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <div class="col-sm-9 offset-sm-3">
                        <button class="btn btn-primary">Login</button>
                        <a href="/Account/ForgotPassword" class="btn btn-link">Forgot Password</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            Burası info kısmı olucak
        </div>
    </div>
</form>